<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

     <changeSet id="1" author="ismail">
         <preConditions onFail="MARK_RAN">
             <not>
                 <tableExists tableName="produit"/>
             </not>
         </preConditions>
          <createTable tableName="produit">
                <column name="id" type="BIGINT" autoIncrement="true">
                 <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="nom" type="VARCHAR(255)">
                 <constraints nullable="false"/>
                </column>
                <column name="description" type="TEXT"/>
                <column name="prix" type="DECIMAL(10,2)">
                 <constraints nullable="false"/>
                </column>
                <column name="quantite_en_stock" type="INT">
                 <constraints nullable="false"/>
                </column>
          </createTable>
     </changeSet>

    <include file="db/changelog/001-add-email-column.xml" relativeToChangelogFile="false"/>
    <include file="db/changelog/003-add-cin-column.xml" relativeToChangelogFile="false"/>
</databaseChangeLog>