<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-mouvement-stock-table" author="ismail">
        <comment>Création de la table mouvement_stock pour gérer les mouvements de stock</comment>

        <createTable tableName="mouvement_stock">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="type_mvt" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="quantite" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="prix_achat" type="DOUBLE PRECISION">
                <constraints nullable="true"/>
            </column>

            <column name="date_mvt" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="ref_commande" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="mouvement_stock"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

