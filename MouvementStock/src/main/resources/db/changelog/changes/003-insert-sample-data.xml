            <column name="prix_achat" valueNumeric="10.50"/>
            <column name="date_mvt" valueDate="2025-01-05T14:30:00"/>
            <column name="ref_commande" valueNumeric="2001"/>
        </insert>

        <insert tableName="mouvement_stock">
            <column name="produit_id" valueNumeric="1"/>
            <column name="type_mvt" value="ENTREE"/>
            <column name="quantite" valueNumeric="50"/>
            <column name="prix_achat" valueNumeric="11.00"/>
